#include <iostream>
using namespace std;
/* Напишите функцию sort упорядывающую массив целых чисел
и программу с примером её использования. В коде запрещается
использовать обращения к массиву по индексу( Arr[i] ),
т.е. нужно использовать указательную арифметику.
Эффективность в данной программе не приоритетна.
Количество аргументов функции не должно превышать 2. */
int main(){
int n;
cin >> n;
int *A = new int [n];
   for (int i = 0; i < n; i++){
      cout << "input A[" << i + 1 << "]:";
      cin >> A[i];
   }
int* m = A;
   for (int i = 0; i < n - 1 ; i++){
        for (int j = 0; j < n - 1 - i ; j++){
           if (*(m + j) > *(m + j + 1)){
              int d = *(m + j);
              *(m + j) = *(m + j + 1);
              *(m + j + 1) = d;
           }
        }
   }
   for (int i = 0; i < n; i++){
      cout << *(A + i) << endl;
   }
return 0;
}
