#include <iostream>
using namespace std;
/* Напишите программу вычисляющую среднее арифметическое
последовательности чисел. Длина последовательности неизвестна,
однако последовательность оканчивается нулем и других нулевых
значений не встречается. В программе запрещается использовать
дополнительную память(aka массивы, списки…) */
int main()
{int s = 0, k = 0, a;
do {
   cin >> a;
   s = s + a;
   k = k + 1;
} while (a != 0);
double d;
d = (long double)s / (long double)k;
cout << d;
return 0;
}
